{
  "name": "missionaldigerati/boltpiconselector",
  "description": "An extension for the Bolt CMS that creates a custom field for selecting a Picons icon.",
  "type": "bolt-extension",
  "keywords": [
    "custom",
    "picon",
    "selector",
    "field"
  ],
  "require": {
      "bolt/bolt": "^3.0"
  },
  "scripts": {
    "lint": "phpcs --standard=PSR2 src/"
  },
  "license": "GPL-3.0+",
  "authors": [
    {
      "name": "Missional Digerati",
      "email": "johnathan@missionaldigerati.org",
      "homepage": "http://missionaldigerati.org"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4" : {
      "Bolt\\Extension\\MissionalDigerati\\BoltPiconSelector\\" : "src"
    }
  },
  "extra": {
      "bolt-assets": "web",
      "bolt-class": "Bolt\\Extension\\MissionalDigerati\\BoltPiconSelector\\BoltPiconSelectorExtension",
      "bolt-icon": "bolt-icon.png",
      "bolt-screenshots": []
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4"
  }
}
